{
    "hosting": [
        {
            "target": "client",
            "public": "dist/codelab-client",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
          "target": "admin",
          "public": "dist/codelab-admin",
          "ignore": [
              "firebase.json",
              "**/.*",
              "**/node_modules/**"
          ],
          "rewrites": [
              {
                  "source": "**",
                  "destination": "/index.html"
              }
          ]
      }
    ]
}
